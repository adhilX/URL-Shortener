{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Module Settings === */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* === Node.js Compatibility === */
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* === Type Checking === */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* === Output === */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
